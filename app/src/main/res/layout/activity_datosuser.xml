<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosuserActivity">



    <EditText

        android:id="@+id/nombrePer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nombre" />

    <EditText
        android:id="@+id/telefonoper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrePer"
        android:hint="telefono" />

    <EditText
        android:id="@+id/carreraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telefonoper"
        android:hint="carrera" />



    <Button
        android:id="@+id/BtnGuardarinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carreraper"
        android:layout_centerHorizontal="true"
        android:text="Guardar informacion" />


</RelativeLayout>